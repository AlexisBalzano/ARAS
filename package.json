{
  "name": "aras",
  "productName": "ARAS",
  "version": "2.0.0",
  "description": "Automatically assign euroscope runways according to actual weather",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build"
  },
  "author": "Alexis Balzano",
  "license": "MIT",
  "dependencies": {
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.AlexisBalzano.ARAS",
    "files": [
      "**/*",
      "!./build-assets",
      "!config",
      "!Readme.txt"
    ],
    "extraResources": [
      "./config/*",
      "./ReadMe.txt"
    ],
    "icon": "./build-assets/icon.png"
  }
}
